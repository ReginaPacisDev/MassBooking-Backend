generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @default(autoincrement()) @id
  email         String  @unique
  name          String?
  password      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
  isSuperAdmin  Boolean? @default(false)
}

enum CreatedBy {
  User
  Admin
}

model Bookings {
  id            Int     @default(autoincrement()) @id
  name            String
  email           String
  startDate       Int
  endDate         Int
  amountPaid      Decimal
  massIntention   String
  phoneNumber     String
  bookedBy        String
  uniqueBookingID String
  sundayMassTime  String?
  weekdayMassTime String?
  createdBy       CreatedBy
  createdAt       DateTime @default(now())

  @@index(fields: [startDate, endDate, id])
}